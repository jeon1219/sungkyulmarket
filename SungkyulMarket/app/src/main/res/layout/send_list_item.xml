<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_margin="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="71dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/messagesendlistitem_tv1"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="아이디"></TextView>

            <TextView

                android:id="@+id/messagesendlistitem_tv2"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="날짜"></TextView>

        </LinearLayout>

        <TextView
            android:id="@+id/messagesendlistitem_tv3"
            android:layout_width="300dp"
            android:layout_height="38dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="내용"></TextView>
    </LinearLayout>

    <Button
        android:id="@+id/messagesendlistitem_btn1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@drawable/btnbackground"
        android:textStyle="bold"
        android:text="삭제">

    </Button>

</LinearLayout>