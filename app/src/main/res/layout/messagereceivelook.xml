<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">




    <LinearLayout

        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:background="@drawable/backgroundline"
        android:orientation="vertical"

        >
        <TextView
            android:layout_marginLeft="3dp"
            android:layout_marginTop="2dp"
            android:id="@+id/messagereceivelook_tv1"
            android:layout_width="378dp"
            android:layout_height="20dp"
            android:background="#FFFFFF"
            android:hint="아이디" />


        <TextView
            android:layout_marginLeft="3dp"
            android:id="@+id/messagereceivelook_tv2"
            android:layout_width="378dp"
            android:layout_height="20dp"
            android:background="#FFFFFF"
            android:hint="날짜" />

    </LinearLayout>
    <TextView
        android:id="@+id/messagereceivelook_tv3"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:hint=""
        android:textStyle="bold"
        android:background="@drawable/backgroundline"
        android:textColorHint="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="90dp"
            android:text="답장"
            android:background="@drawable/btnbackground"
            android:textStyle="bold"
            android:id="@+id/messagereceivelook_btn1">
        </Button>
        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="80dp"
            android:text="삭제"
            android:background="@drawable/btnbackground"
            android:textStyle="bold"
            android:id="@+id/messagereceivelook_btn2">

        </Button>
    </LinearLayout>

</LinearLayout>
