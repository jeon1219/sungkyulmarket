<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Messagehomesend"
    android:orientation="vertical">

    <LinearLayout

        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:background="@drawable/backgroundline"
        android:orientation="vertical"

        >
        <TextView
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:id="@+id/messagesendlook_tv1"
            android:layout_width="378dp"
            android:layout_height="20dp"
            android:background="#FFFFFF"

            android:hint="아이디" />


        <TextView
            android:layout_marginLeft="4dp"
            android:id="@+id/messagesendlook_tv2"
            android:layout_width="378dp"
            android:layout_height="20dp"
            android:background="#FFFFFF"
            android:hint="날짜" />

    </LinearLayout>

    <TextView
        android:id="@+id/messagesendlook_tv3"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:hint=""
        android:textStyle="bold"
        android:background="@drawable/backgroundline"
        android:textColorHint="#000000"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/messagesendlook_btn1"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="150dp"
            android:background="@drawable/btnbackground"
            android:textStyle="bold"
            android:text="삭제">

        </Button>
    </LinearLayout>

</LinearLayout>
