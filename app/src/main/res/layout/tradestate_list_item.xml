<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:id="@+id/conditionlistitem_imv1"
        android:layout_marginRight="5dp"

        />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/conditionlistitem_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:hint="제목"
                android:textColor="#000000"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/conditionlistitem_tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:hint="홍길동"
                android:textColor="#000000"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/conditionlistitem_tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:hint="4000"
                android:textColor="#000000"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(원)"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/conditionlistitem_btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쪽지 보내기"
            android:background="@drawable/btnbackground"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"/>

        <Button
            android:id="@+id/conditionlistitem_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="거래완료"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btnbackground"
            />

        <Button
            android:id="@+id/conditionlistitem_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="거래 취소"
            android:textSize="15dp"
            android:background="@drawable/btnbackground"
            android:layout_marginLeft="5dp"/>



    </LinearLayout>

</LinearLayout>

</LinearLayout>